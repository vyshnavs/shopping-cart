<section>
  <div class="container">
    <div class="row">
      <a href="/admin/add-product" class="btn btn-success ml-auto mt-4">Add product</a>

    </div>
    <a href="/admin" class="btn btn-primary">ADMIN PANEL</a>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scopr="col">Price</th>
          <th scope="col">Discription</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        
        <tr>
          <th scope="row">1</th>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>Rs.{{this.price}}</td>
          <td>{{this.description}}</td>
          <td><img style="width:30px;height: 30px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('are you want to delete {{this.name}}')">Delete</a>
          </td>

        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>